{
  "name": "podcastly",
  "version": "1.0.0",
  "description": "Open source podcast application written in TypeScript",
  "scripts": {
    "build": "tsc && tsc --project tsconfig.service-worker.json",
    "build:watch": "tsc --watch",
    "prebuild": "npm run clean",
    "clean": "rm -rf web/js/*.js web/js/*.d.ts web/js/*.js.map web/*.js web/*.d.ts web/*.js.map",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm run build && jest --coverage"
  },
  "keywords": [
    "podcast",
    "rss",
    "pwa",
    "typescript"
  ],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
